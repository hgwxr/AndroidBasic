<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/menu"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginLeft="5px"
            android:textColor="@color/wordsCategoryColor"
            android:text="香哈头条" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/wordsCategoryColor"
            android:layout_marginRight="15px"
            android:text=">" />
    </LinearLayout>

    <include layout="@layout/xiang_ha_header" android:id="@+id/header1"></include>
    <include layout="@layout/xiang_ha_header" android:id="@+id/header2"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#ccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginLeft="5px"
            android:textColor="@color/wordsCategoryColor"
            android:text="人气美食家" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/wordsCategoryColor"
            android:layout_marginRight="15px"
            android:text=">" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="210px">
        <LinearLayout
            android:paddingLeft="15px"
            android:id="@+id/hotUserLin"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:orientation="horizontal">
            <include layout="@layout/hot_user" android:id="@+id/user1"></include>
            <include layout="@layout/hot_user" android:id="@+id/user2"></include>
            <include layout="@layout/hot_user" android:id="@+id/user3"></include>
            <include layout="@layout/hot_user" android:id="@+id/user4"></include>
            <include layout="@layout/hot_user" android:id="@+id/user5"></include>
            <include layout="@layout/hot_user" android:id="@+id/user6"></include>
            <include layout="@layout/hot_user" android:id="@+id/user7"></include>
            <include layout="@layout/hot_user" android:id="@+id/user8"></include>
            <include layout="@layout/hot_user" android:id="@+id/user9"></include>
            <include layout="@layout/hot_user" android:id="@+id/user10"></include>
        </LinearLayout>

    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#ccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginLeft="5px"
            android:textColor="@color/wordsCategoryColor"
            android:text="精选专题" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/wordsCategoryColor"
            android:layout_marginRight="15px"
            android:text=">" />
    </LinearLayout>
    <include layout="@layout/item_featured_topics" android:id="@+id/topPart1"></include>
    <include layout="@layout/item_featured_topics" android:id="@+id/topPart2"></include>
    <include layout="@layout/item_featured_topics" android:id="@+id/topPart3"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginLeft="5px"
            android:textColor="@color/wordsCategoryColor"
            android:text="精彩生活圈" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/wordsCategoryColor"
            android:layout_marginRight="15px"
            android:text=">" />
    </LinearLayout>
</LinearLayout>